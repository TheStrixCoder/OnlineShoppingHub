<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Type"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:textColor="#000000"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/LaptopAccesoriesItem" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:textColor="#000000"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/LaptopAccesoriesBrand" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Model/details"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Details"
            android:id="@+id/laptopAccessoriesProductDetail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sortbyLaptopAccesories"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Filter it out!"
            android:background="@drawable/roundedbutton"
            android:layout_gravity="center"
            android:onClick="searchLaptopAccesories"/>



    </LinearLayout>

</ScrollView>